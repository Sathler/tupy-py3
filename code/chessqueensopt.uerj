lógico Possível(inteiro linha, inteiro coluna):
    inteiro i
    para i <- 0..linha:
        se P[i] = coluna \
        ou P[linha-(i+1)] = coluna+(i+1) \
        ou P[linha-(i+1)] = coluna-(i+1):
            retornar falso
    retornar verdadeiro
