lógico DamasPacíficas(inteiro linha):
    se (linha >= N):
        retornar verdadeiro

    inteiro col
    para col <- 0..N:
        ~~ V <- Tabuleiro(linha, [linha, col])
        se Possível(linha, col):
            P[linha] <- col
            se DamasPacíficas(linha+1):
                escrever(P)

    retornar falso

DamasPacíficas(0)
